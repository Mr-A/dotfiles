
    " Basics {
"       colorscheme ir_black     " my color scheme (only works in GUI)
       set guifont=Bitstream\ Vera\ Sans\ Mono\ 12 " My favorite font
    "  set guioptions=c         " use simple dialogs rather than pop-ups
       set mousehide            " hide the mouse cursor when typing
    "  au GUIEnter * set lines=50 columns=120   " auto set windows size to 120x50
    " }

    " Font Switching Binds {
       map <F10> <ESC>:set guifont=Bitstream\ Vera\ Sans\ Mono\ 12<CR>
       map <F11> <ESC>:set guifont=Bitstream\ Vera\ Sans\ Mono\ 16<CR>
       map <F12> <ESC>:set guifont=Bitstream\ Vera\ Sans\ Mono\ 20<CR>
    " }

